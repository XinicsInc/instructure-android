<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emptyView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:tint="@color/lightgray"
            android:visibility="gone"
            tools:src="@drawable/vd_mail_empty"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/title"
            style="@style/TextFont.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/noItemsToDisplayShort"
            android:textColor="@color/defaultTextGray"
            android:textSize="20sp"
            android:visibility="gone"
            tools:text="No conversations"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/message"
            style="@style/TextFont.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColor="@color/defaultTextGray"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="Tap the + to create a new conversation"
            tools:visibility="visible"/>

    </LinearLayout>

    <include
        android:id="@+id/loading"
        layout="@layout/loading_lame"/>

</FrameLayout>
