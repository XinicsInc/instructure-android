<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
         <!--Customize your theme here.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/Widget.ActionButton.Overflow</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.NoActionBar.NavigationActivity" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="DetailsDialogAnimationVideo">
        <item name="android:windowEnterAnimation">@anim/none</item>
        <item name="android:windowExitAnimation">@anim/none</item>
    </style>

    <style name="Widget.ActionButton.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:contentDescription">@string/accessibility_overflow</item>
    </style>

    <!--Text Styles-->
    <style name="TextStyle.Primary.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextStyle.Primary.SingleLine.Gray">
        <item name="android:textColor">@color/canvasTextMedium</item>
    </style>

    <style name="TextStyle.Primary.SingleLine.Navigation">
        <item name="android:textColor">@color/defaultPrimary</item>
    </style>

    <style name="TextStyle.Primary.CardView">
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="TextStyle.Secondary">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/canvasTextMedium</item>
    </style>

    <style name="TextStyle.Secondary.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextStyle.Secondary.SingleLine.Dark">
        <item name="android:textColor">@color/canvasTextDark</item>
    </style>

    <style name="TextStyle.Secondary.Dark">
        <item name="android:textColor">@color/canvasTextDark</item>
    </style>

    <style name="TextStyle.Secondary.CardView">
        <item name="android:maxLines">3</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TextStyle.Tertiary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/canvasTextMedium</item>
    </style>

    <style name="TextStyle.Tertiary.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextStyle.Tertiary.SingleLine.Dark">
        <item name="android:textColor">@color/canvasTextDark</item>
    </style>

    <style name="TextStyle.Tertiary.Dark">
        <item name="android:textColor">@color/canvasTextDark</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Button.LoginButton">
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:textColor">@color/parentButtonTextDisabled</item>
        <item name="android:background">@drawable/login_button_background</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Base.Widget.AppCompat.EditText.LoginEditText">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/lightgray</item>
        <item name="android:background">@drawable/parent_et_bg</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextInputLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LoginTextAsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/login_textButton</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="CustomMaterial.App.Dialog.TimePicker" parent="Material.App.Dialog.Light">
        <item name="tp_backgroundColor">#FFFFFF</item>
        <item name="tp_selectionColor">@color/colorPrimary</item>
        <item name="tp_selectionRadius">16dp</item>
        <item name="tp_tickSize">1dp</item>
        <item name="tp_textStyle">normal</item>
        <item name="tp_textColor">@color/primaryText</item>
        <item name="tp_textHighlightColor">#FFFFFFFF</item>
        <item name="tp_animDuration">@android:integer/config_mediumAnimTime</item>
        <item name="tp_inInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="tp_outInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="tp_mode">hour</item>
        <item name="tp_headerHeight">120dp</item>
        <item name="tp_textTimeSize">44sp</item>
        <item name="tp_textTimeColor">#90FFFFFF</item>
        <item name="tp_leadingZero">false</item>
        <item name="di_actionTextColor">@color/primaryText</item>
    </style>


</resources>
